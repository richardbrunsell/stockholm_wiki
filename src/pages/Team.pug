include team_list
include ../templates/mixins

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Team | iGEM Stockholm
  body
    include ../templates/nav.pug
    header.d-flex.justify-content-center.align-items-center
      .container
        .wave.wave1
        .wave.wave2
        .wave.wave3

    main
      .container
        h1 Meet the Team
        each member in teamMembers
          div(class="card card"+teamMembers.indexOf(member))
            img(src=require('../assets/img/Team--member.png')['default'])
            h5.card-title #{member['name']}
            .info
              img(src=require('../assets/img/Team--profile.png')['default'])
              p.card-text #{member['desc']}

    include ../templates/footer.pug
